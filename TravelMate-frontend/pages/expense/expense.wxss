.container {
  padding: 20rpx;
}

.mode-switch {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.mode-switch view {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.mode-switch .active {
  background: #6f7348;
  color: white;
}

.date-picker {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
  margin: 20rpx;
}

.date-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.picker {
  padding: 10rpx 20rpx;
  background: #fff;
  border-radius: 6rpx;
  min-width: 200rpx;
  text-align: center;
}

.summary {
  padding: 30rpx;
  margin: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-around;
}

.summary text {
  display: block;
  text-align: center;
}

.amount-budget {
  font-size: 36rpx;
  font-weight: bold;
  color: #52c41a;
  margin-top: 10rpx;
}

.amount-expense {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-top: 10rpx;
}

/* Added trip list styles */
/* Trip grid styles */
.trip-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  margin: 20rpx;
}

.trip-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  transition: all 0.3s;
}

.trip-item.selected {
  background: #84b68c;
  color: white;
}

.trip-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.trip-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.trip-date {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.trip-location {
  font-size: 24rpx;
}

.trip-item.selected .trip-date,
.trip-item.selected .trip-location {
  color: rgba(255, 255, 255, 0.9);
}

.expense-list {
  margin-top: 20rpx;
}

.expense-item {
  display: flex;
  background-color: rgba(207, 218, 205, 0.6);
  align-items: flex-start;
  padding: 20rpx 20rpx;  
  margin: 30rpx 130rpx 30rpx -80rpx ;   
  width:130%;           
}

.expense-info {
  display: flex;
  flex-direction: column;
}

.expense-name {
  font-size: 28rpx;
}

.expense-time {
  font-size: 24rpx;
  color:  #666;
  margin-top: 8rpx;
}

.expense-amount {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-left: auto; 
}



.total-budget {
  margin-left: 20rpx;
}

.type-filter {
  margin-left: 40rpx;
}

.type-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 20rpx;
  margin: 20rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  aspect-ratio: 1;  /* 保持正方形比例 */
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  box-sizing: border-box;
  min-height: 130rpx; /* 确保最小高度 */
}

.type-item.selected {
  background: #84b68c;
  color: white;
}

.type-icon {
  width: 80rpx;  /* 更大的图标 */
  height: 80rpx;
  margin-bottom: 16rpx;
}

.type-name {
  font-size: 28rpx;
  text-align: center;
  line-height: 1.2;
}
/* Background image */
.bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
