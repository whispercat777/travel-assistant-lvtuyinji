.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* Header Styles */
.header {
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.itinerary-info {
  flex: 1;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.date {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.intelligence-btn {
  padding: 16rpx 32rpx;
  background: #6f7348;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* Events List Styles */
.events-container {
  flex: 1;
  overflow: hidden;
  margin-bottom: 220rpx;
}

.events-list {
  padding: 0 40rpx;
}

.event-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.event-type {
  display: flex;
  align-items: center;
}

.type-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.event-time {
  font-size: 28rpx;
  color: #666;
}

.event-content {
  margin-bottom: 20rpx;
}

.event-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.event-location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.event-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.event-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.action-btn.budget {
  background: #f0f0f0;
  color: #666;
}

.action-btn.edit {
  background: #84b68c;
  color: white;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* Add Button Styles */
.add-btn {
  position: fixed;
  bottom: 90rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  background: #6f7348;
  border-radius: 50rpx;
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 3;
  font-size: 30rpx;
}

.add-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

/* Modal Styles */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.modal-body {
  padding: 32rpx;
}

.action-btn.delete {
  background: rgba(255, 99, 99, 0.1);
  color: #999;
}