/* 页面容器 */
.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

/* 背景图片 */
.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 内容区域 */
.content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.header {
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

/* 行程信息区域 */
.itinerary-info {
  flex: 1;
}

/* 行程标题 */
.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

/* 行程日期 */
.date {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

/* 行程位置 */
.location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

/* 位置图标 */
.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 智能推荐按钮 */
.intelligence-btn {
  padding: 16rpx 32rpx;
  background: #6f7348;
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 事件列表容器 */
.events-container {
  flex: 1;
  overflow: hidden;
  margin-bottom: 220rpx;
}

/* 事件列表 */
.events-list {
  padding: 0 40rpx;
}

/* 事件卡片 */
.event-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 事件卡片头部 */
.event-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

/* 事件类型 */
.event-type {
  display: flex;
  align-items: center;
}

/* 类型图标 */
.type-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

/* 事件时间 */
.event-time {
  font-size: 28rpx;
  color: #666;
}

/* 事件内容区 */
.event-content {
  margin-bottom: 20rpx;
}

/* 事件名称 */
.event-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

/* 事件位置 */
.event-location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

/* 信息图标 */
.info-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 事件描述 */
.event-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 事件操作区 */
.event-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

/* 操作按钮基础样式 */
.action-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 预算按钮样式 */
.action-btn.budget {
  background: #f0f0f0;
  color: #666;
}

/* 编辑按钮样式 */
.action-btn.edit {
  background: #84b68c;
  color: white;
}

/* 操作图标 */
.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 添加按钮样式 */
.add-btn {
  position: fixed;
  bottom: 90rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  background: #6f7348;
  border-radius: 50rpx;
  color: white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 3;
  font-size: 30rpx;
}

/* 添加图标 */
.add-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 模态框内容区 */
.modal-content {
  width: 80%;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 模态框头部 */
.modal-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

/* 关闭按钮 */
.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

/* 模态框主体 */
.modal-body {
  padding: 32rpx;
}

/* 删除按钮样式 */
.action-btn.delete {
  background: rgba(255, 99, 99, 0.1);
  color: #999;
}