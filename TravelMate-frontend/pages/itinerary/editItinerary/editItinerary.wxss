.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.content {
  position: relative;
  z-index: 2;
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.form-container {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 2rpx solid #e5e5e5;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 2rpx solid #e5e5e5;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 80rpx;
}

.placeholder {
  color: #999;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background: #6f7348;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn.disabled {
  background: #ccc;
}