.container {
  min-height: 100vh;
}

.user-card {
  width: 90%;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.user-id {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.gender {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.edit-btn {
  width: 80%;
  height: 80rpx;
  line-height: 40rpx;
  background: #6f7348;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.edit-btn:active {
  opacity: 0.8;
}