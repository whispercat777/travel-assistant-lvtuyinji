.container {
  min-height: 100vh;
}

.form-container {
  width: 90%;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 50rpx;
}

.label {
  display: block;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.radio-group {
  display: flex;
  flex-direction: row;
}

.radio-label {
  margin-right: 60rpx;
  font-size: 28rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 44rpx;
  background: #6f7348;
  color: white;
  border-radius: 44rpx;
  margin-top: 80rpx;
  font-size: 32rpx;
}

.save-btn[disabled] {
  background: #9c9c9c;
  color: rgba(255, 255, 255, 0.6);
}